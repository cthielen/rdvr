<p id="notice"><%= notice %></p>

<h3>Latest</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Show</th>
      <th>Filename</th>
      <th>Title</th>
      <th>Started</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recordings.each do |recording| %>
      <tr>
        <td><%= recording.show_id %></td>
        <td><%= recording.filename %></td>
        <td><%= recording.title %></td>
        <td><%= recording.started %></td>
        <td><%= recording.finished %></td>
        <td><%= link_to 'Show', recording %></td>
        <td><%= link_to 'Edit', edit_recording_path(recording) %></td>
        <td><%= link_to 'Destroy', recording, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

