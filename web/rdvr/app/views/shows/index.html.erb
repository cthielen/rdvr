<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Weekly</th>
      <th>Start</th>
      <th>Duration</th>
      <th>Host</th>
      <th>Port</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.title %></td>
        <td><%= show.artist %></td>
        <td><%= show.description %></td>
        <td><%= show.genre %></td>
        <td><%= show.weekly ? "Yes" : "No" %></td>
        <td><%= show.start %></td>
        <td><%= show.duration %></td>
        <td><%= show.host %></td>
        <td><%= show.port %></td>
        <td><%= show.url %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path, class: "btn btn-default" %>
